# Reload functions
super + Escape
	pkill -USR1 -x sxhkd; dunstify "Reloaded sxhkd"; 

super + space
    bsp-layout cycle


super + ctrl + g
    bsp-layout set grid


super + ctrl + t
    bsp-layout set tall

super + Return
    termite

super + shift + b
    firefox-developer-edition

# Lock screen
super + c
    xtrlock

super + d
    dmenu_run

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + {j, k}
    bspc node -f {next,prev}.local

super + shift + {j, k}
    bspc node -s last

# Scratchpad
super + {semicolon, n}
    scratchpad.sh {assistant "assistant", notes "nvim /tmp/scratchnote"}

# Load project setup
super + shift + p
    ls ~/.bro/projects | dmenu -p "Load Project: " | code_on_project.sh setup

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# move/resize
#

# Insert receptacle
super + i; {h,j,k,l}
    bspc node --presel-dir {west,south,north,east} -i

# Close all receptacle
super + shift + i
    for win in $(bspc query -N -n .leaf.\!window); do bspc node $win -k; done;

# Move to receptacle
super + r
    bspc node $(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window)

# Balance nodes
super + e
    bspc node @/ -B

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
